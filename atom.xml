---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
  xmlns:media="http://search.yahoo.com/mrss/"
>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>GrokPodcast</title>
  <link type="application/atom+xml" rel="self" href="http://grokpodcast.com/atom.xml"/>
  <link href="http://grokpodcast.com/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://grokpodcast.com/</id>
  <author>
    <name>Rodrigo Pinto</name>
    <email>rodrigopqn@gmail.com</email>
  </author>

  {% for post in site.posts %}
    <entry>
      <id>http://grokpodcast.com{{ post.id }}</id>
      <link type="text/html" rel="alternate" href="http://grokpodcast.com{{ post.url }}"/>
      <title>{{ post.title }}</title>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>Carlos Brando</name>
      </author>
      <author>
        <name>Rafael Rosa</name>
      </author>
      <content type="html">{{ post.content | html_escape | xml_escape }}</content>
    </entry>
  {% endfor %}
</feed>
